<% if @cloud.errors.any? %>
<ul>
  <% @cloud.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<hr>
<%= form_for @cloud do |f| %>

标题
<%= f.text_field :title %>
